  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Navbar scroll effect
    window.addEventListener("scroll", () => {
      document.querySelector(".navbar")
        .classList.toggle("scrolled", window.scrollY > 50);
    });

    // Cotizador funcional
    document.querySelector("#cotizador-envios form").addEventListener("submit", function (e) {
      e.preventDefault();
      const cp = document.getElementById("codigoPostal").value;
      const categoria = document.getElementById("categoriaProducto").value;

      let costoBase = categoria === "plantas" ? 120 : categoria === "macetas" ? 80 : 60;
      let envio = cp.startsWith("97") ? costoBase * 0.8 : costoBase; // descuento en Yucat√°n

      alert(`Costo estimado de env√≠o: $${envio} MXN`);
    });
  </script>
